<%= form_for(task) do |f|%>
  <%= f.label :title, 'Task name', class: "control-label" %><br>
  <%= f.text_field :title %><br>
  <%= f.label :details, 'Description', class: "control-label" %><br>
  <%= f.text_area :details %><br>
  <% unless task.new_record? %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.submit "Save / Update" %><br>
<% end %>
